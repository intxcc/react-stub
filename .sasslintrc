{
  "files": {
    "include": "**/*.s+(a|c)ss"
  },
  "options": {
    "formatter": "stylish",
    "merge-default-rules": true
  },
  "rules": {
    "property-sort-order": [
      1,
      {
        "order": "concentric"
      }
    ],
    "no-trailing-whitespace": true,
    "no-color-literals": 0,
    "no-important": 0
  }
}